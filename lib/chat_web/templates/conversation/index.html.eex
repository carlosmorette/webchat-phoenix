<div class="main">
  <h3>Web Chat</h3>

  <section class="messages" id="container-messages">
  </section>
  
  <section class="data-input">
    <div class="input-groub mb-3">
      <input id="author" type="text" class="form-control" placeholder="your name..." />
    </div>
  
    <div class="input-group">
      <textarea id="message" class="form-control" rows="10" cols="4" placeholder="your message..."></textarea>
    </div>

    <button id="send-button" class="btn btn-primary send-button" phx-click="send-message">Send</button>
  </section>
  
</div>
